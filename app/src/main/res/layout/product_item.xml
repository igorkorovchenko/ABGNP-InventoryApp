<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/detail_field_text_size"
        android:textColor="@color/titleText"
        android:text="@string/default_product_name" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/product_name"
        android:layout_toStartOf="@+id/product_buy"
        android:padding="@dimen/price_padding"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/default_product_price"
        android:textAlignment="textEnd"
        android:textColor="@color/titleText"
        android:textSize="@dimen/detail_field_text_size" />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_below="@+id/product_name"
        android:textColor="@color/subtitleText"
        android:text="@string/default_product_quantity" />

    <Button
        android:id="@+id/product_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:text="@string/product_buy"
        android:textColor="@color/buttonText" />

</RelativeLayout>